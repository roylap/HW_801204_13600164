<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imvPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvoutput1"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text=" "
                android:textSize="12dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvoutput2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="//RGB"
                android:layout_below="@+id/tvoutput1"
                android:layout_alignLeft="@+id/tvoutput1"/>

        </RelativeLayout>



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnBut1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e9dbdb"
            android:orientation="horizontal"
            android:layout_marginRight="6dp"/>

        <Button
            android:id="@+id/btnBut2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#eccbca"
            android:orientation="horizontal"
            android:layout_marginRight="6dp"/>

        <Button
            android:id="@+id/btnBut3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7583a5"
            android:orientation="horizontal"
            android:layout_marginRight="6dp"/>

        <Button
            android:id="@+id/btnBut4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#99a9bf"
            android:orientation="horizontal"
            android:layout_marginRight="6dp"/>

        <Button
            android:id="@+id/btnBut5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c3ccd8"
            android:orientation="horizontal"
            android:layout_marginRight="6dp"/>

        <Button
            android:id="@+id/btnBut6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dadfe3"
            android:orientation="horizontal"
            android:layout_marginRight="6dp"/>





    </LinearLayout>



</LinearLayout>